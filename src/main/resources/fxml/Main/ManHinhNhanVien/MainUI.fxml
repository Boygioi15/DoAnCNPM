<VBox fx:id="daily1" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Danh sách nhân viên">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <HBox spacing="10.0">
         <children>
            <MenuButton mnemonicParsing="false" styleClass="action-menu-button" text="Thêm mới">
               <items>
                  <MenuItem fx:id="addDirectButton" mnemonicParsing="false" text="Thêm trực tiếp" />
                  <MenuItem fx:id="addExcelButton" mnemonicParsing="false" text="Thêm từ file Excel" />
               </items>
               <font>
                  <Font size="18.0" />
               </font>
            </MenuButton>
            <MenuButton mnemonicParsing="false" styleClass="action-menu-button" text="Thao tác">
               <items>
                  <MenuItem fx:id="deleteSelectedButton" mnemonicParsing="false" text="Xóa các dòng đã chọn" />
                  <MenuItem fx:id="exportExcelButton" mnemonicParsing="false" text="Xuất file excel" />
               </items>
               <font>
                  <Font size="18.0" />
               </font>
            </MenuButton>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Button fx:id="refreshButton" mnemonicParsing="false" styleClass="action-button" text="Refresh">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <MFXTextField fx:id="maNVTextField" borderGap="6.0" floatMode="BORDER" floatingText="Mã nhân viên" prefWidth="120.0" />
            <MFXTextField fx:id="tenNVTextField" borderGap="6.0" floatMode="BORDER" floatingText="Tên nhân viên" prefWidth="120.0" />
            <MFXComboBox fx:id="chucVuComboBox" floatingText="Chức vụ" />
         </children>
      </HBox>
      <MasterDetailPane fx:id="masterDetailPane" />
      <HBox fx:id="masterPane" spacing="1.0">
         <children>
            <TableView fx:id="mainTableView" HBox.hgrow="ALWAYS">
               <columns>
                  <TableColumn prefWidth="104.79995381832123" text="Selected" />
                  <TableColumn prefWidth="96.79995858669281" text="Mã nhân viên" />
                  <TableColumn prefWidth="90.39997100830078" text="Họ tên" />
                  <TableColumn prefWidth="79.99998474121094" text="Giới tính" />
                  <TableColumn prefWidth="91.20001220703125" text="Lương" />
                  <TableColumn prefWidth="98.39996337890625" text="Chức vụ" />
                  <TableColumn prefWidth="98.39996337890625" text="Thao tác" />
               </columns>
            </TableView>
            <Button fx:id="toggleDetailButton" maxHeight="1000.0" mnemonicParsing="false" text="&gt;" />
         </children>
      </HBox>
      <VBox fx:id="detailPane" spacing="5.0">
         <children>
            <Label text="Thông tin chi tiết" />
            <GridPane hgap="15.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints halignment="LEFT" hgrow="NEVER" />
                  <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
                  <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
                  <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
                  <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
                  <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
                  <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
                  <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ngày sinh:" GridPane.rowIndex="3" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="SDT: " GridPane.rowIndex="4" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email: " GridPane.rowIndex="5" />
                  <Text fx:id="sdtText" strokeType="OUTSIDE" strokeWidth="0.0" text="SDT" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Giới tính:" GridPane.rowIndex="2" />
                  <Text fx:id="emaiLText" strokeType="OUTSIDE" strokeWidth="0.0" text="Email" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ghi chú:" GridPane.rowIndex="8" />
                  <TextArea fx:id="ghiChuTextArea" editable="false" prefHeight="50.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nhân viên:" GridPane.rowIndex="1" />
                  <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Text fx:id="maNVText" strokeType="OUTSIDE" strokeWidth="0.0" text="Mã" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="-" />
                        <Text fx:id="tenNVText" strokeType="OUTSIDE" strokeWidth="0.0" text="Tên" />
                     </children>
                  </HBox>
                  <Text fx:id="gioiTinhText" strokeType="OUTSIDE" strokeWidth="0.0" text="Giới tính" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Text fx:id="ngaySinhText" strokeType="OUTSIDE" strokeWidth="0.0" text="Ngày sinh" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Chức vụ:" GridPane.rowIndex="6" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Lương:" GridPane.rowIndex="7" />
                  <Text fx:id="chucVuText" strokeType="OUTSIDE" strokeWidth="0.0" text="Chức vụ" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                  <Text fx:id="luongText" strokeType="OUTSIDE" strokeWidth="0.0" text="Lương" GridPane.columnIndex="1" GridPane.rowIndex="7" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </GridPane>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
